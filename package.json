{
  "name": "botsito-podopie",
  "version": "1.0.0",
  "description": "WhatsApp Cloud API webhook with Odoo integration",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n api,web -c green,cyan \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm --workspace apps/web run build",
    "start": "node server.js",
    "postinstall": "node scripts/postinstall.js",
    "prisma:generate": "npm --workspace apps/api run prisma:generate",
    "prisma:migrate": "npm --workspace apps/api run prisma:migrate",
    "prisma:control:migrate": "npm --workspace apps/api run prisma:control:migrate",
    "prisma:control:deploy": "npm --workspace apps/api run prisma:control:deploy",
    "seed:admin": "node prisma/seed.js",
    "seed:superadmin": "node scripts/seed-control-superadmin.js",
    "seed:tenant-user": "node scripts/seed-tenant-user.js"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
